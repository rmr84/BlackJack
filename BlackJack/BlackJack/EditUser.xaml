<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlackJack.EditUser">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Entry x:Name="UserId"
                   Placeholder="UserId"
                        WidthRequest="250" 
                            VerticalTextAlignment="Start"
                                FontSize="30"
                                    TextColor="White"
                                        BackgroundColor="Red">
                
            </Entry>
            <Button x:Name="Reset" 
                    Text="Reset Stats" 
                        VerticalOptions="End" 
                            FontAttributes="Bold" 
                                FontSize="Large" TextColor="Red" 
                                    Clicked="Reset_Clicked" 
                                            IsVisible="False">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>