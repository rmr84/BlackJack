<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlackJack.StatPage"
             BackgroundImageSource="statpagescreen.jpg">
    
    <ContentPage.Content>
        <StackLayout x:Name="forList" Orientation="Vertical" >
            <ListView x:Name="ListView"
                      
                                HasUnevenRows="False"
                                    ItemTapped="ListView_ItemTapped"
                                        IsVisible="True">
            </ListView>

            
                       
        </StackLayout>
    </ContentPage.Content>
</ContentPage>